// Creates a chessoard that will simultaneously increase in size vertically and horizontally.
// Size of chessboard is determined by a prompt a number from 1 to 40.

let sizeRequest = Number(prompt("Please provide a number between 1 and 40. Thanks!")); 
  if (sizeRequest < 1) 
    prompt ("Please provide a number between 1 and 40. Thanks!");	
  else if(sizeRequest > 40)
    prompt ('Please provide a number between 1 and 40. Thanks!');
  else
    console.log('Size of chessboard is ' + (2*sizeRequest) + ' by ' + (2*sizeRequest) + '.');

let i = 0;
let size = sizeRequest;
let chessBoard = function() {
	while(i!==size) {
		let spaceHash = '\u2B1C\u2B1B';
        let hashSpace = '\u2B1B\u2B1C';
          console.log(spaceHash.repeat(size));
          console.log(hashSpace.repeat(size));
          i++;

	}
};
chessBoard();
